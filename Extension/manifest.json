{
  "version": "1.0.0",
  "manifest_version": 3,
  "name": "AudiTra - Live Audio Translation",
  "description": "This is a Chrome extension for Live Audio Transcription of your tabs audio content",
  "side_panel": {
    "default_path": "js/index.html"
  },
  "action": {
    "default_title": "AudiTra - Live Audio Translation"
  },
  "background": {
    "service_worker": "js/service_worker.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["tabCapture", "activeTab", "tabs", "storage", "sidePanel"],
  "host_permissions": ["<all_urls>"]
}
